{
  "private": true,
  "name": "collabkit-monorepo",
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/@collabkit/*",
      "packages/@collabkit/react/src/__fixtures__",
      "www"
    ],
    "nohoist": [
      "**/@types/react",
      "**/@ladle/react",
      "**/mailing",
      "**/mailing-core"
    ]
  },
  "resolutions": {
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6"
  },
  "scripts": {
    "dev": "pnpm --recursive --parallel --filter '!@collabkit/vue' run dev",
    "build": "pnpm --parallel --filter '@collabkit/react' --filter '@collabkit/vue' run build",
    "server": "yarn workspace server dev",
    "typecheck": "tsc -b examples/demo www",
    "snapshots": "yarn workspace @collabkit/react start-server-and-test dev http://localhost:61000 'playwright test'"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "pnpm": "^7.5.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
