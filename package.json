{
  "private": true,
  "name": "collabkit-monorepo",
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/@collabkit/*",
      "packages/@collabkit/test-utils",
      "www"
    ],
    "nohoist": [
      "**/@ladle/react",
      "**/mailing",
      "**/mailing-core",
      "**/@swc/helpers"
    ]
  },
  "scripts": {
    "dev": "pnpm --recursive --parallel run dev",
    "build": "pnpm --parallel --filter '!@collabkit/pro-theme-latitude' run build",
    "server": "yarn workspace server dev",
    "typecheck": "tsc -b examples/demo www",
    "snapshots": "yarn workspace @collabkit/react start-server-and-test dev http://localhost:61000 'playwright test'"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "pnpm": "^7.5.0",
    "prettier": "^2.6.2",
    "tsx": "^3.12.1",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
