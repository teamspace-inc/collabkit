{
  "private": true,
  "name": "collabkit-monorepo",
  "workspaces": [
    "examples/*",
    "packages/@collabkit/*",
    "packages/@collabkit/react/src/__fixtures__",
    "www"
  ],
  "scripts": {
    "dev": "pnpm --recursive --parallel run dev",
    "server": "yarn workspace server dev",
    "typecheck": "tsc -b examples/demo www",
    "snapshots": "yarn workspace @collabkit/react playwright test"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "pnpm": "^7.5.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
