{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "composite": true,
    "outDir": "types",
    "emitDeclarationOnly": true,
    "paths": {
      "@collabkit/colors": ["./packages/@collabkit/colors/src"],
      "@collabkit/editor": ["./packages/@collabkit/editor/src"],
      "@collabkit/core": ["./packages/@collabkit/core/src"],
      "@collabkit/client": ["./packages/@collabkit/client/src"]
    },
    "rootDir": "."
  },
  "include": ["src", "../colors/src", "../core/src", "../theme/src", "../editor/src"]
}
